{
    "steps": [{
        "id": "multi",
        "steps": {
            "js": [{
                "id": "load-files",
                "files": [
                    "sample/src/js/main.js"
                ]
            }, {
                "id": "apply-constants",
                "constants": {
                    "MY_AWESOME_CONSTANT": 3.14
                }
            }, {
                "id": "apply-macros",
                "macros": ["matrix"]
            }, {
                "id": "mangle-names",
                "skip": [],
                "force": []
            }, {
                "id": "uglify-js"
            }],
            "html": [{
                "id": "load-files",
                "files": [
                    "sample/src/index.html"
                ]
            }, {
                "id": "uglify-html"
            }],
            "css": [{
                "id": "load-files",
                "files": [
                    "sample/src/style.css"
                ]
            }]
        }
    }, {
        "id": "build-html",
        "files": [
            "sample/src/index.html"
        ]
    }, {
        "id": "output",
        "destination": "sample/build/game.html"
    }]
}
