{
    "steps": [{
        "type": "parallel",
        "outputs": {
            "js": {
                "type": "sequence",
                "steps": [{
                    "type": "load-files",
                    "files": [
                        "sample/src/js/main.js"
                    ]
                }, {
                    "type": "apply-constants",
                    "constants": {
                        "MY_AWESOME_CONSTANT": 3.14
                    }
                }, {
                    "type": "apply-macros",
                    "macros": ["matrix"]
                }, {
                    "type": "mangle-names",
                    "skip": [],
                    "force": []
                }, {
                    "type": "uglify-js"
                }],
            },
            "html": {
                "type": "sequence",
                "steps": [{
                    "type": "load-files",
                    "files": [
                        "sample/src/index.html"
                    ]
                }, {
                    "type": "uglify-html"
                }],
            },
            "css": [{
                "type": "load-files",
                "files": [
                    "sample/src/style.css"
                ]
            }]
        }
    }, {
        "type": "build-html",
        "files": [
            "sample/src/index.html"
        ]
    }, {
        "type": "output",
        "destination": "sample/build/game.html"
    }]
}
